                        step.classList.add('active');
                    } else if (stepNumber < this.currentStep) {
                        step.classList.add('completed');
                        step.querySelector('.step-indicator').textContent = '‚úì';
                    } else {
                        step.querySelector('.step-indicator').textContent = stepNumber;
                    }
