      }

      .addon-header {
          display: flex;
          align-items: center;
          gap: var(--spacing-sm);
          margin-bottom: var(--spacing-sm);
      }

      .addon-icon {
          font-size: 1.5rem;
      }

      .addon-title {
          font-size: var(--font-size-lg);
          font-weight: 700;
          color: var(--primary-headings);
          flex: 1;
      }

      .addon-price {
          font-size: var(--font-size-lg);
          font-weight: 800;
          color: var(--primary-button);
      }

      .addon-features {
          list-style: none;
          font-size: var(--font-size-sm);
          color: var(--primary-text);
      }

      .addon-features li {
          margin-bottom: 4px;
