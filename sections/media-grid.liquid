<link rel="preload" as="style" href="{{ 'media-grid.css' | asset_url }}">
{{ 'media-grid.css' | asset_url | stylesheet_tag }}

<div class="{% if settings.layout_width == 'boxed' %}container{% else %}container-fluid{% endif %}">  
  {% if section.settings.heading != blank or section.settings.description != blank %}
    {% if section.settings.highlight_font == 'body' %}
        {% capture highlightStyle %}
        <span class="body-font">
        {% endcapture %}
      {% elsif section.settings.highlight_font == 'heading' %}
      {% capture highlightStyle %}
         <span class="heading-font">
      {% endcapture %}  
      {% else %}
      {% capture highlightStyle %}
         <span class="accent-font">
      {% endcapture %}  
    {% endif %} 

    <div class="section-heading" {% if settings.enable_animation %}data-aos="fade-up" data-aos-delay="200"{% endif %}>
      <{{ section.settings.seo_heading }} class="section-heading-title {{ section.settings.heading_size }}">
          {{ section.settings.heading | replace: "<strong>", highlightStyle | replace: "</strong>", '</span>' | replace: '++', '<br/>' }}
      </{{ section.settings.seo_heading }}>
      {% if section.settings.description != blank %}
        <div class="section-heading-desc" {% if settings.enable_animation %}data-aos="fade-up" data-aos-delay="200"{% endif %}>
          {{
            section.settings.description
            | replace: '<p></p>', '<br />'
            | replace: '<h1></h1>', '<br />'
            | replace: '<h2></h2>', '<br />'
            | replace: '<h3></h3>', '<br />'
            | replace: '<h4></h4>', '<br />'
            | replace: '<h5></h5>', '<br />'
            | replace: '<h6></h6>', '<br />'
          }}
        </div>
      {% endif %}
    </div>
  {% endif %}
    <div class="yv-media-grid-wrapper">      
      {% if section.blocks.size > 0 %}
        <div class="media-grid-content">
          {% for block in section.blocks %}
            {% assign aosDelay = forloop.index | times: 50 %}
            {% capture image_content %}
              <div class="media-grid-image" id="blockMedia-{{ block.id }}">                
                 {% if block.settings.video != blank %}    
                    {% if block.settings.autoplay_video == false %}               
                      {% assign video_autoplay = block.settings.autoplay_video %}
                    {% else %}
                      {% assign video_autoplay = true %}
                    {% endif %}
                    <deferred-media class="image-wrapper" {% if video_autoplay == false %}data-id="media-grid-autodisable"{% endif %}>
                      {% if video_autoplay == false %}
                        {% assign poster = '' %}
                        {% if block.settings.poster != blank %}
                          {% assign poster = block.settings.poster | image_url: width: 1100 %} 
                        {% endif %}
                        {{ block.settings.video | video_tag: image_size: '1100x', class: 'videoBackgroundFile', autoplay:video_autoplay, loop:true, controls: false, muted:true, poster: poster }} 
                        <div class="video-overlay-text video-autoplay-{{ video_autoplay }}" style="display:{%- if video_autoplay == true -%}none{% endif %}">
                            <div class="video-overlay-text-content">  
                              <button class="video-play-btn" aria-label="{{ 'general.video.button' | t }}">
                                <svg width="21" height="24" viewBox="0 0 21 24" fill="none">
                                  <path d="M19.5318 9.90372C20.8651 10.6735 20.8651 12.598 19.5318 13.3678L3.18776 22.8041C1.85443 23.5739 0.187758 22.6116 0.187758 21.072L0.187759 2.19954C0.187759 0.659939 1.85443 -0.302315 3.18776 0.467486L19.5318 9.90372Z" fill="currentcolor"/>
                                </svg>
                              </button>
                            </div>
                          </div>                             
                      {% else %}
                        <template style="display:none">
                          {{ block.settings.video | video_tag: image_size: '1100x', class: 'videoBackgroundFile', autoplay:video_autoplay, loop:true, controls: false, muted:true }} 
                        </template>    
                          <noscript>
                            <img 
                              src="{{ block.settings.video.preview_image | image_url }}"
                              loading="eager"
                              alt="{{ block.settings.video.preview_image.alt | default: shop.name | strip_html }}"
                              width="{{ block.settings.video.preview_image.width }}"
                              height="{{ block.settings.video.preview_image.height }}"
                            >
                          </noscript>  
                      {% endif %}         
                {% else %}
                <div class="image-wrapper">                     
                      {% if block.settings.image_mobile != blank %}
                       <img src="{{ block.settings.image_mobile | img_url: 'master' }}" alt="{{ block.settings.image_mobile.alt }}" class="mobile-img d-block d-md-none" loading="lazy" class="lazyload  {{ class }}">
                      {% endif %}
                      {%- if block.settings.media_image != blank -%}
                        <img src="{{ block.settings.media_image | img_url: 'master' }}" alt="{{ block.settings.media_image.alt }}" class="media_image{% if block.settings.image_mobile != blank %} d-none d-md-block{% endif %}" loading="lazy" class="lazyload  {{ class }}">                      
                      {%- else -%}
                        {% liquid
                          assign placeholderClass = 'placeholder-svg'
                          if block.settings.image_mobile != blank
                          assign placeholderClass = 'placeholder-svg d-none d-md-block'
                          endif
                        %}
                        {{ 'lifestyle-1' | placeholder_svg_tag: placeholderClass }}
                      {%- endif -%}             
                    {% if block.settings.video != blank %} 
                  </deferred-media>
                    {% else %}
                    </div>
                    {% endif %}
                  {% endif %}         
                </div>      
            {% endcapture %}
            <{% if block.settings.link_url != blank %}a href="{{ block.settings.link_url }}" {% else %}div{% endif %} id="media-grid-{{ block.id }}" class="media-grid-item media-grid-item-{{ forloop.index }} {{ block.type }}" {{ block.shopify_attributes }} {% if settings.enable_animation %}data-aos="fade-up" data-aos-delay="{{ aosDelay }}"{% endif %} 
              style="--layoutRadius:{% if settings.layout_style == 'rounded' %}10px{% else %}0px{% endif %};">
               {% if block.type != 'image-bottom-text-top' %}
                 {{ image_content }}
               {% endif %}
              {% if block.settings.heading != blank or block.settings.description != blank %}
                <div class="media-content content-position-{{ block.settings.content_position }} text-{{ block.settings.content_alignment }}">
                  <div class="media-content-inner">
                    {% if block.settings.heading != blank %}
                      <{{ block.settings.seo_heading }} class="media-content-heading {{ block.settings.heading_size }}">{{ block.settings.heading | replace: '++', '<br/>' }}</{{ block.settings.seo_heading }}>
                    {% endif %}
                    {% if block.settings.description != blank %}
                      <div class="media-content-description">{{ block.settings.description | newline_to_br  }}</div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
              {% if block.type== 'image-bottom-text-top' %}
                {{ image_content }}
              {% endif %}
            </{% if block.settings.link_url != blank %}a {% else %}div{% endif %}>
          {% endfor %}
        </div>
      {% endif %}
      </div>
</div>
<style>
  {% comment %} .mobile-img {
    display: block !important;
  } {% endcomment %}

  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'image-left-text-right' %}
        #media-grid-{{ block.id }} {
          --height-scale: {{- block.settings.image_height_scale -}}%;
          --width-scale: {{- block.settings.image_width_scale  | divided_by : 100.00 -}}fr;
        }
      {% endif %}
      #media-grid-{{ block.id }} {
      --row:{{ block.settings.row }};
      --column:{{ block.settings.column }};
      --content-bg: {{ block.settings.background_color.red }},{{ block.settings.background_color.green }},{{ block.settings.background_color.blue }};
      --content-bg-alpha: {{ block.settings.background_opacity | divided_by: 100.0 }};  
      --column-background:{{ block.settings.column_background }};
      }
      {% if section.settings.card_border == true %}
        #media-grid-{{ block.id }}{
          border: 1px solid {{ block.settings.card_border_color }};
        } 
      {% endif %}
      #media-grid-{{ block.id }} .video-overlay-text .video-play-btn{
        color:{{- block.settings.play_btn_color -}};
      }
      #media-grid-{{ block.id }} .media-content-heading {
        color: {{ block.settings.heading_color }};        
      }

      #media-grid-{{ block.id }} .media-content-description{
        color: {{ block.settings.text_color }};
      }
    {% endfor %}
  {% endif %}
  @media (max-width:767px) {
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        #media-grid-{{ block.id }}{
          --row:{{ block.settings.row_mobile }};
          --column:{{ block.settings.column_mobile }};
        }
      {% endfor %}
    {% endif %}
  }

  #shopify-section-{{ section.id }}{
    padding-top:{{ section.settings.top_space_desktop }}px;
    padding-bottom:{{ section.settings.bottom_space_desktop }}px;
    background:var(--{{- section.settings.bgcolor -}}ColorBody);
  {%- unless section.settings.bgcolor == 'primary' or section.settings.bgcolor == 'gradient' -%}
  --primaryColorBody:var(--{{- section.settings.bgcolor -}}ColorBody);
  {%- endunless -%}
    --desktop-height: {{ section.settings.desktop_row_height }}px;
    --mobile-height:{{ section.settings.mobile_row_height }}px;
    --highlight-text: {{ section.settings.highlighted_color }};
    --column-gap:{{ section.settings.desktop_grid_gap }}px;
  } 

  @media only screen and (max-width:767px) {
    #shopify-section-{{ section.id }}{
        padding-top:{{ section.settings.top_space_mobile }}px;
        padding-bottom:{{ section.settings.bottom_space_mobile }}px;
      --column-gap:{{ section.settings.mobile_grid_gap }}px;
    }
  }
  {% if section.settings.section_visibility == 'large' %}
    @media (max-width: 767px) {
      #shopify-section-{{ section.id }}{
        display: none !important;
      }
    }
  {% elsif section.settings.section_visibility == 'small' %}
    @media (min-width: 768px) {
      #shopify-section-{{ section.id }}{
        display: none !important;
      } 
    }
  {% endif %}
</style>
